{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"outDir": "dist",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"removeComments": true,
		"noImplicitThis": false,
		"baseUrl": ".",
		"paths": {
			"@type": ["./index.d.ts"],
		}
	},
	"include": ["src", "index.d.ts"],
	"exclude": ["node_modules"]
}
